<?xml version="1.0"?>
<config>
    <modules>
        <Mwojcik_Getresponse>
            <version>1.0.0</version>
        </Mwojcik_Getresponse>
    </modules>
    <global>
        <blocks>
            <mwojcik_getresponse>
                <class>Mwojcik_Getresponse_Block</class>
            </mwojcik_getresponse>
        </blocks>
        <helpers>
            <mwojcik_getresponse>
                <class>Mwojcik_Getresponse_Helper</class>
            </mwojcik_getresponse>
        </helpers>
        <models>
            <mwojcik_getresponse>
                <class>Mwojcik_Getresponse_Model</class>
            </mwojcik_getresponse>
        </models>
        <resources>
            <mwojcik_getresponse_setup>
                <setup>
                    <module>Mwojcik_Getresponse</module>
                </setup>
            </mwojcik_getresponse_setup>
        </resources>
    </global>


    <frontend>
        <events>
            <checkout_cart_product_add_after>
                <observers>
                    <getresponse_add_to_cart_shop_webhook>
                        <class>Mwojcik_Getresponse_Model_Observer</class>
                        <method>addProductToCartHandler</method>
                    </getresponse_add_to_cart_shop_webhook>
                </observers>
            </checkout_cart_product_add_after>
        </events>
    </frontend>

    <admin>
        <routers>
            <mwgetresponse>
                <use>admin</use>
                <args>
                    <module>Mwojcik_Getresponse</module>
                    <frontName>mw-getresponse</frontName>
                </args>
            </mwgetresponse>
        </routers>
    </admin>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <getresponse_options>
                                            <title>GetResponse configuration</title>
                                        </getresponse_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

</config>
